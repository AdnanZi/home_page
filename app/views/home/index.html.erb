<% @posts.each do |post|  %>
	
<div class="post">
	<div class="page-header">
		<h1><%= post.title %></h1>
	</div>

	<div><%= post.body.html_safe %></div>

	<div class="footer">
		<%= button_to "Edit", edit_post_path(post), method: :get, class: "btn btn-large btn-primary" %>
		<%= button_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-large btn-danger" %>
	</div>
</div>

<% end %>